@{
    ViewBag.Title = "Joel Hilton's Movies";
}

@model IEnumerable<Assignment3.Models.Movie>
<div class="container">
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- for loop to display table-->
            @foreach (Assignment3.Models.Movie x in Model)
            {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.Lent</td>
                    <td>@x.Notes</td>
                    <td><button type="submit" class="btn btn-primary">Edit</button></td>
                    <td><button type="submit" class="btn btn-warning">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
